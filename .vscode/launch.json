{
    "version": "0.2.0",
    "configurations": [ 
        {
            "type": "python",
            "request": "attach",
            "name": "Attach to Remote docker",
            "host": "localhost",
            "port": 10104,
            "justMyCode": false,
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/src",
                "remoteRoot": "/src/"
            }]
        },
        {
            "name": "Python: Flask (0.11.x or later)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "users_api.api.rest.main",
                "LC_ALL": "es_AR.utf-8",
                "LANG": "es_AR.utf-8"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=10102"
            ]
        }
    ]
}